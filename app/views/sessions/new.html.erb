<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <h2 id="log-in-title">Ввойти</h2>
    <div class="auth-form well">
    <%= form_for(User.new, url: login_path) do |f| %>

      <%=f.label :username%>
      <div class="input-group">

          <%= f.text_field :username, class: "form-control"%>
      </div>

      <div class="actions">
        <%= f.submit "ввойти", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
    <%= render partial: 'layouts/flash_errors'%>
  </div>
</div>
